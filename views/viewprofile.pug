extends layout

block content
  
    style.
      body {
        /* Removed previous background styles */
        background-image: url('grass.jpg'); /* Add your image path here */
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Times, Times New Roman, serif;
        height: 100vh;
        margin: 0;
        background: linear-gradient(45deg, red, violet, orange, cyan);
        background-size: 300% 300%;
        animation: color 12s ease-in-out infinite;
      }
      @keyframes color{
        0%{
          background-position: 0 50%;
        }
        50%{
          background-position: 100% 50%;
        }
        100%{
          background-position: 0 50%;
        }
      }
      .container {
        width: 400px;
        height: 300px;
        background-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        padding: 20px;
        border-radius: 10px;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
      }
      .table th,
      .table td {
        border: 0px solid #ddd;
        padding: 10px;
        text-align: left;
      }
      .table th {
        background-color: #f0f0f0;
      }
      .footer {
        text-align: center;
        margin-top: 20px;
        font-family: Brush Script MT, Brush Script Std, cursive;
        font-size: 20px;
      }
      h1 {
        display: flex;
        justify-content: center;
        align-items: center;
      }
    script.
    body
    .container
      table.table
        h1 Welcome #{user.user}
          tr
            td Pin Number
            td #{user.pin}
          tr
            td Email
            td #{user.mail}
          tr
            td Address
            td #{user.address}
          tr
            td Phone
            td #{user.phone}
          tr 
            td 
            td
      .footer
        p Have a nice day!
