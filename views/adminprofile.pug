extends layout

block content
  style.
    body {
      background-image: url('admin5.jpg'); /* Replace 'background.jpg' with your desired image */
      background-size: cover;
      background-position: center;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      margin-top: 50px;
      color: white;
      font-family: 'Jokerman', cursive; /* Apply Jokerman font */
      font-size: 50px; /* Adjust font size as needed */
    }

    h2 {
      font-family: 'Times New Roman';
      text-align: center;
      color: white;
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin: 20px auto;
      width: 50%;
    }

    li {
      background-color: rgba(255, 255, 255, 0.8);
      margin: 10px 0;
      padding: 10px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    li:hover {
      background-color: rgba(255, 255, 255, 1);
    }

    a {
      text-decoration: none;
      color: #333;
      display: inline-block;
      padding: 10px 20px; /* Adjust padding as needed Add border */
      border-radius: 20px; /* Round corners */
      transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease; /* Add transition effects */
    }

    a:hover {
      background-color: #333;
      color: #fff;
      border-color: #fff;
    }

    .search-container {
      text-align: center;
      margin-bottom: 20px;
    }

    .search-input {
      padding: 5px;
      margin-bottom: 10px;
    }

  h1 Welcome #{admin.adminuser}
  h2 Registered Students
  ul(id="studentList")
    each pin in students
      li(class="student", id=`student${pin}`) <!-- Added id attribute for each student -->
        a(href=`/viewstudent/${pin}`, target='_self') &#128064; #{pin} <!-- Using symbol for the anchor tag -->
